<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BBSMapper">
	<select id="list" resultType="com.example.domain.BBSVO">
		select * from BBS
		order by bid desc
		limit 0, 5;
	</select>
	<select id="read" resultType="com.example.domain.BBSVO">
		select * from BBS
		where bid=#{bid}
	</select>
	<update id="update">
		update BBS
		set title=#{title}, contents=#{contents}
	</update>
	<delete id="delete">
		delete from BBS
		where bid=#{bid}
	</delete>
	<insert id="insert">
		insert into BBS(uid, title, contents)
		values(#{uid}, #{title}, #{contents})
	</insert>
 	<select id="now" resultType="string">
 		select now();
 	</select>
</mapper>